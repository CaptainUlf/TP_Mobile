<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/planet_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            card_view:srcCompat="@drawable/terre"
            android:translationZ="1dp"/>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_item_bg"
            android:orientation="vertical"
            android:translationX="-50dp">

            <TextView
                android:id="@+id/planet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:text="Terre"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/planet_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="A small, rocky planet which supports a variety of life"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#77FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>